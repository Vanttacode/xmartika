---
import '../styles/global.css';
// Importamos el ID del cliente para el script de trackeo
import { CLIENT_ID } from '../lib/constants';

interface Props {
  title: string;
  description?: string;
}

const { 
  title, 
  description = "Ingeniería Contable y Business Intelligence para Startups en República Dominicana. Automatiza tu 606, 607 e impuestos con Xmartika."
} = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{title}</title>
    
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://xmartika.com.do/" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/og-image.jpg" />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://xmartika.com.do/" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="/og-image.jpg" />
  </head>
  
  <body class="min-h-screen flex flex-col font-sans bg-white text-slate-900 selection:bg-teal-100 selection:text-teal-900">
    <slot />

    <script define:vars={{ CLIENT_ID }}>
      import { createClient } from 'https://esm.sh/@supabase/supabase-js@2';

      const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;
      const supabaseKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;

      if (supabaseUrl && supabaseKey) {
        const supabase = createClient(supabaseUrl, supabaseKey);

        async function trackVisit() {
          // Evitamos contar duplicados por sesión
          if (sessionStorage.getItem('visit_counted')) return;

          try {
            // 1. Obtener valor actual SOLO de este cliente
            const { data: currentData } = await supabase
              .from('site_config')
              .select('value')
              .eq('client_id', CLIENT_ID)
              .eq('key', 'page_views')
              .single();

            if (currentData) {
              const newCount = parseInt(currentData.value) + 1;
              
              // 2. Actualizar valor
              await supabase
                .from('site_config')
                .update({ value: newCount.toString() })
                .eq('client_id', CLIENT_ID)
                .eq('key', 'page_views');
                
              sessionStorage.setItem('visit_counted', 'true');
            }
          } catch (err) {
            console.error('Error tracking visit:', err);
          }
        }
        trackVisit();
      }
    </script>
  </body>
</html>